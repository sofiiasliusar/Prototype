<Screen>:
    canvas.before:
        Color:
            rgba: 0.941, 0.949, 0.973, 1  # Background color (RGB values)
        Rectangle:
            pos: self.pos
            size: self.size
        

<SumInput@TextInput>:
    hint_text: "Sum"
    multiline: False
    height: 50
    background_color: 0.85, 0.85, 0.85, 1 
    foreground_color: 0, 0, 0, 1  
    padding: [5, 5, 5, 5]
    font_size: 16  
    background_normal: r"C:\Prototype-main\sprites\sum.png"  
    background_active: r"C:\Prototype-main\sprites\sum.png"
   
            
<CustomSpinner@Spinner>:
    background_normal: r"C:\Prototype-main\sprites\category.png"
    background_disabled_normal: r"C:\Prototype-main\sprites\category.png"
    option_cls: "SpinnerOption"
    disabled_color: 1, 1, 1, 1
<SpinnerOption>:

    background_normal: r"C:\Prototype-main\sprites\category.png"
<MenuButton>:
    background_normal: r"C:\Prototype-main\sprites\menu.png"
<Label>:
    font_size: 16  
    color: 0, 0, 0, 1 
<HeadingLabel>:
    font_size: 32  
<BlueButton>:
    color: 1, 1, 1, 1
    background_normal: r"C:\Prototype-main\sprites\button.png"
<DescriptionInput@TextInput>:
    hint_text: "Description"
    multiline: False
    height: 50
    background_color: 0, 0, 0, 0  # Transparent background
    foreground_color: 0, 0, 0, 1  # Black text color
    padding: [5, 5, 5, 0]  # Padding, excluding bottom padding
    font_size: 16  # Font size

    canvas.before:
        Color:
            rgba: 0, 0, 0, 1  # Black color
        Rectangle:
            pos: self.pos[0], self.pos[1]
            size: self.size[0], 1
